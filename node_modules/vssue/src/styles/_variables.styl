// the main color
$vssue-theme-color ?= #3eaf7c

// the text color (used for common text)
$vssue-text-color ?= #2c3e50

// the text light color (used for muted text, disabled text, etc)
$vssue-text-light-color ?= #a3aab1

// the border color
$vssue-border-color ?= #eaecef

// the progress color
$vssue-progress-color ?= $vssue-theme-color

// the font size
$vssue-font-size ?= 16px

// the font family
$vssue-font-family ?= -apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"

// the mobile breakpoint
$vssue-breakpoint-mobile ?= 576px

// ltr-rtl direction
$vssue-direction ?= ltr
